{
  "sections": {
    "coming_soon_page": {
      "type": "coming-soon-page",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ settings.coming_soon_heading | default: 'We\\'re Coming Soon!' }}",
            "heading_size": "h0"
          }
        },
        "paragraph": {
          "type": "paragraph",
          "settings": {
            "text": "{{ settings.coming_soon_description | default: '<p>We\\'re working hard to bring you something amazing. Stay tuned!</p>' }}",
            "text_style": "body"
          }
        },
        "hubspot_form": {
          "type": "hubspot_form",
          "settings": {}
        },
        "baker_description": {
          "type": "baker_description",
          "settings": {
            "text": "<p>Turn your passion for baking into your next venture. We're creating the ultimate platform for bakers of all sizes. Hobbyist, home baker, or professionalâ€”everyone is welcome. Get an all-in-one solution to manage your orders and showcase your creations. Be the first to join our community!</p>",
            "text_style": "body"
          }
        },
        "baker_registration": {
          "type": "baker_registration",
          "settings": {
            "button_text": "{{ settings.baker_button_text | default: 'Baker Registration' }}"
          }
        },
        "password_link": {
          "type": "password_link",
          "settings": {
            "link_text": "{{ settings.password_link_text | default: 'Site Access' }}"
          }
        }
      },
      "block_order": [
        "heading",
        "paragraph",
        "hubspot_form",
        "baker_description",
        "baker_registration",
        "password_link"
      ],
      "settings": {
        "image": "{{ settings.coming_soon_background }}",
        "image_overlay_opacity": "{{ settings.coming_soon_overlay_opacity | default: 40 }}",
        "image_height": "large",
        "desktop_content_position": "middle-center",
        "desktop_content_alignment": "center",
        "show_text_box": true,
        "color_scheme": "{{ settings.coming_soon_color_scheme | default: 'scheme-1' }}",
        "mobile_content_alignment": "center",
        "show_text_below": false
      }
    }
  },
  "order": [
    "coming_soon_page"
  ]
}